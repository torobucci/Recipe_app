<div class="content">
    <h1><%= @recipe.name %></h1>
    <div class="recipe-details">
      <div class="details">
        <p>Preparation Time: <%= @recipe.preparation_time %> hours</p>
        <p>Cooking Time: <%= @recipe.cooking_time %> hours</p>
        <div class="steps">
          steps go here...
        </div>
      </div>
      <div class = "public">
        <% if can? :update, @recipe  %>
          <p>Public</p>
          <label class="toggle">
            <input type="checkbox" id="public-toggle" <%= @recipe.public ? 'checked' : '' %>
               onchange="updateDatabase(<%= @recipe.id %>, this.checked)">
            <span class="slider"></span>
          </label>
        <% end %>
      </div>
    </div>

    <div class="recipe-buttons">
      <button>Generate shopping list</button>
      <% if can? :update, @recipe  %>
        <button><%= link_to 'Add ingredient', new_recipe_recipe_food_path(@recipe) %></button>
      <% end %>
    </div>
    <table>
      <thead>
        <tr>
          <th>Food</th>
          <th>Quantity</th>
          <th>Value</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @recipe.foods.each do |food| %>
          <tr>
            <td><%= food.name %></td>
            <td><%= food.quantity %></td>
            <td><%= food.price %></td>
            <td>
              <button>Modify</button>
              <button>Delete</button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
